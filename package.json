{
  "name": "caramelo-api",
  "version": "1.0.0",
  "description": "API for Caramelo project",
  "main": "index.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start": "npm run services:up && npm run services:wait:database && npm run migrations:up && nodemon index.js",
    "test": "npx dotenv -e .env.test -- npm run services:up && npm run services:wait:database && npm run migrations:up && concurrently -n server,jest --kill-others -s command-jest \"npx dotenv -e .env.test -- node index.js\" \"npx dotenv -e .env.test -- jest --runInBand --verbose\"",
    "posttest": "npm run services:stop",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "eslint .",
    "services:up": "docker compose -f infra/docker/compose.yaml up -d",
    "services:down": "docker compose -f infra/docker/compose.yaml down",
    "services:stop": "docker compose -f infra/docker/compose.yaml stop",
    "services:wait:database": "node infra/database/wait-for-mongo.js",
    "migrations:up": "migrate up",
    "migrations:down": "migrate down",
    "migrations:create": "migrate create",
    "prepare": "husky",
    "commit": "cz"
  },
  "keywords": [],
  "author": "Esser Servi√ßos em Tecnologia LTDA (CNPJ 57.962.671/0001-50)",
  "license": "proprietary",
  "private": true,
  "dependencies": {
    "@aws-sdk/client-sns": "3.812.0",
    "async-retry": "1.3.3",
    "bcryptjs": "3.0.2",
    "cors": "2.8.5",
    "dayjs": "1.11.13",
    "dotenv": "16.4.7",
    "dotenv-expand": "12.0.1",
    "express": "4.21.2",
    "express-rate-limit": "7.2.0",
    "express-slow-down": "2.0.1",
    "express-validator": "7.2.1",
    "helmet": "7.1.0",
    "i18n": "0.15.1",
    "jsonwebtoken": "9.0.2",
    "migrate": "2.1.0",
    "mongoose": "8.14.1",
    "morgan": "1.10.0",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.1",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@babel/core": "7.27.1",
    "@babel/plugin-transform-modules-commonjs": "7.27.1",
    "@babel/preset-env": "7.27.1",
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@eslint/js": "9.26.0",
    "@faker-js/faker": "9.7.0",
    "autoprefixer": "10.4.20",
    "babel-jest": "29.7.0",
    "babel-plugin-module-resolver": "5.0.2",
    "cli-progress": "3.12.0",
    "commitizen": "4.3.1",
    "concurrently": "9.1.1",
    "cz-conventional-changelog": "3.3.0",
    "dotenv-cli": "10.0.0",
    "eslint": "9.17.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.10.0",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "nodemon": "3.1.0",
    "prettier": "3.4.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
